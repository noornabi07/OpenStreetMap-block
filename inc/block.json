{
  "apiVersion": "1",
  "name": "osm/osm-block",
  "title": "OSM Block",
  "description": "Insert a custom map featuring your own locations or an interactive map where anyone can add location pins without registering by Noornabi.",
  "category": "widgets",
  "keywords": ["osm-block", "openStreetMap", "Map-block"],
  "textdomain": "osm-block",
  "attributes": {
    "align": {
      "type": "string",
      "default": ""
    },
    "cId": {
      "type": "string",
      "default": ""
    },
    "content": {
      "type": "string",
      "default": "Open Street Map"
    },
    "tab": {
      "type": "string",
      "default": {
        "activeTab": "tab1"
      }
    },
    "settingsSearchQuery": {
      "type": "string",
      "default": ""
    },
    "settingsLat": {
      "type": "string",
      "default": "25.6260712"
    },
    "settingsLng": {
      "type": "string",
      "default": "88.6346228"
    },
    "columnWidth": {
      "type": "object",
      "default": {
        "width": { "desktop": "100%", "tablet": "", "mobile": "" }
      }
    },
    "columnHeight": {
      "type": "object",
      "default": {
        "height": { "desktop": "400px", "tablet": "", "mobile": "" }
      }
    },
    "wrapperStyles": {
      "type": "object",
      "default": {
        "padding": 20,
        "wrapperBorder": {"radius": "5px"}
      }
    },
    "mapStyles": {
      "type": "object",
      "default": {
        "mapBorder": { "radius": "5px" }
      }
    },
    "marker": {
      "type": "object",
      "default": {
        "url": "https://unpkg.com/leaflet@1.7.1/dist/images/marker-icon.png",
        "width": 25,
        "height": 31,
        "text": "Current Location",
        "color": "#fff",
        "typo": { "fontSize": 15 },
        "closeBtnColor": "#fff",
        "background": "#000",
        "showIcon": true,
        "mWidth": "160px",
        "mHeight": "45px"
      }
    },

    "layer": {
      "type": "object",
      "default": {
        "enable": true,
        "typeLayer": "openStreetMap",
        "position": "topleft"
      }
    },

    "tracker": {
      "type": "object",
      "default": {
        "tEnable": true,
        "tPosition": "topleft",
        "tTitle": "Show Me Where I am"
      }
    },
    "mapOptions": {
      "type": "object",
      "default": {
        "isShowDownload": false,
        "isPdf": false,
        "routePlan": false,
        "fullScreen": false,
        "zoomUnit": 15,
        "isMouseZoom": true,
        "mapLayerType": "default"
      }
    },
    "locations": {
      "type": "object",
      "default": {
        "fromLocation": {
          "lat": 0,
          "lon": 0,
          "locationName": ""
        },
        "toLocation": {
          "lat": 0,
          "lon": 0,
          "locationName": ""
        }
      }
    }


  },
  "supports": {
    "align": ["wide", "full"],
    "html": false
  },
  "example": {
    "attributes": {
      "preview": true,
      "columns": {
        "desktop": 1,
        "tablet": 1,
        "mobile": 1
      }
    }
  },
  "editorScript": "file:./../dist/editor.js"
}
